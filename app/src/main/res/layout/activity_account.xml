<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mtsealove.com.github.BuslinkerDrivers.Accounts.AccountActivity">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/titleLayout"
                    android:background="@color/colorPrimary">
        <ImageView android:layout_width="25dp" android:layout_height="25dp"
                   android:layout_margin="15dp"
                   android:src="@drawable/btn_left"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="회원정보 수정"
                  android:textSize="22sp"
                  android:textColor="@color/white"/>
    </RelativeLayout>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                android:scrollbars="none"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/titleLayout">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/black"
                      android:textSize="25sp"
                      android:text="회원정보"/>
            <!--회원정보-->

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:paddingVertical="10dp"
                      android:paddingLeft="10dp"
                      android:inputType="textEmailAddress"
                      android:background="@drawable/background_input"
                      android:textSize="18sp"
                      android:textColorHint="@color/hint" android:id="@+id/emailTV"/>

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:paddingVertical="10dp"
                      android:paddingLeft="10dp"
                      android:inputType="textPassword"
                      android:background="@drawable/background_input"
                      android:textSize="18sp"
                      android:hint="새 비밀번호"
                      android:textColorHint="@color/hint" android:id="@+id/pwET"/>

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:paddingVertical="10dp"
                      android:paddingLeft="10dp"
                      android:inputType="textPassword"
                      android:background="@drawable/background_input"
                      android:textSize="18sp"
                      android:hint="새 비밀번호 확인"
                      android:textColorHint="@color/hint" android:id="@+id/pwConfirmET"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:paddingVertical="10dp"
                      android:paddingLeft="10dp"
                      android:inputType="textPersonName"
                      android:background="@drawable/background_input"
                      android:textSize="18sp"
                      android:hint="이름"
                      android:textColorHint="@color/hint" android:id="@+id/nameET"/>

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:id="@+id/birthLayout"
                            android:background="@drawable/background_input"
                            android:clickable="true"
                            android:layout_marginTop="15dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="생년월일"
                          android:textSize="18sp"
                          android:textColor="@color/hint"
                          android:paddingVertical="10dp"
                          android:paddingLeft="10dp" android:id="@+id/birthTV"/>

                <ImageView android:layout_width="25dp" android:layout_height="25dp"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="10dp"
                           android:src="@drawable/btn_date"
                />
            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:background="@drawable/background_input"
                            android:layout_marginTop="15dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="성별"
                          android:textSize="18sp"
                          android:textColor="@color/hint"
                          android:paddingVertical="10dp"
                          android:paddingLeft="10dp"/>
            </RelativeLayout>

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:paddingVertical="10dp"
                      android:paddingLeft="10dp"
                      android:inputType="phone"
                      android:background="@drawable/background_input"
                      android:textSize="18sp"
                      android:hint="연락처"
                      android:textColorHint="@color/hint" android:id="@+id/contactET"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:paddingVertical="10dp"
                      android:paddingLeft="10dp"
                      android:inputType="textPersonName"
                      android:background="@drawable/background_input"
                      android:textSize="18sp"
                      android:hint="업체 ID"
                      android:textColorHint="@color/hint" android:id="@+id/companyET"/>

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:paddingVertical="10dp"
                      android:paddingLeft="10dp"
                      android:inputType="textMultiLine"
                      android:background="@drawable/background_input"
                      android:textSize="18sp"
                      android:hint="자기 소개\n간단하게 쓰시면 됩니다."
                      android:textColorHint="@color/hint" android:id="@+id/prET"/>

            <!--차량 정보-->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:textColor="@color/black"
                      android:textSize="25sp"
                      android:text="차량정보"/>

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:paddingVertical="10dp"
                      android:paddingLeft="10dp"
                      android:inputType="textPersonName"
                      android:background="@drawable/background_input"
                      android:textSize="18sp"
                      android:hint="보유 차종"
                      android:textColorHint="@color/hint" android:id="@+id/carTypeET"/>

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/background_input">
                <ImageView android:layout_width="25dp" android:layout_height="25dp"
                           android:layout_marginLeft="10dp"
                           android:layout_centerVertical="true"
                           android:src="@drawable/btn_left"
                           />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/carYearTV"
                          android:layout_centerInParent="true"
                          android:text="연식: 2019"
                          android:textSize="18sp"
                          android:textColor="@color/hint"
                          android:paddingVertical="10dp"/>

                <ImageView android:layout_width="25dp" android:layout_height="25dp"
                           android:layout_marginRight="10dp"
                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/btn_right"
                           />
            </RelativeLayout>

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:paddingVertical="10dp"
                      android:paddingLeft="10dp"
                      android:inputType="textPersonName"
                      android:background="@drawable/background_input"
                      android:textSize="18sp"
                      android:hint="차량번호"
                      android:textColorHint="@color/hint" android:id="@+id/carNumberET"/>

            <!--차량 사진-->

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:textColor="@color/black"
                      android:textSize="25sp"
                      android:text="차량사진"/>

            <GridLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_columnWeight="3" android:id="@+id/photoFrontBtn">

                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/icon_photo" android:id="@+id/photoFrontIV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:textSize="20sp"
                              android:textColor="@color/black"
                              android:text="차량 정면"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_columnWeight="2" android:id="@+id/photoSideBtn">

                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/icon_photo" android:id="@+id/photoSideIV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:textSize="20sp"
                              android:textColor="@color/black"
                              android:text="차량 측면"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_columnWeight="3" android:id="@+id/photoWholeSeatBtn">

                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/icon_photo" android:id="@+id/photoWholeSeatIV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:textSize="20sp"
                              android:textColor="@color/black"
                              android:text="좌석 전체"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_columnWeight="2" android:id="@+id/photoSeatBtn">

                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/icon_photo" android:id="@+id/photoSeatIV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:textSize="20sp"
                              android:textColor="@color/black"
                              android:text="좌석"/>
                </LinearLayout>

            </GridLayout>

            <!--등록 서류-->

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:textColor="@color/black"
                      android:textSize="25sp"
                      android:text="등록 서류"/>

            <GridLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_columnWeight="2" android:id="@+id/licenseBtn">

                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/icon_photo" android:id="@+id/LicenseIV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:textSize="20sp"
                              android:textColor="@color/black"
                              android:text="버스운전 자격증"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_columnWeight="3" android:id="@+id/insureBtn">

                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/icon_photo" android:id="@+id/insureIV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:textSize="20sp"
                              android:textColor="@color/black"
                              android:text="보험증서"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_columnWeight="3" android:id="@+id/registrationBtn">

                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/icon_photo" android:id="@+id/registrationIV"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:textSize="20sp"
                              android:textColor="@color/black"
                              android:text="차량 등록증"/>
                </LinearLayout>

            </GridLayout>

            <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/btn_primary"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="수정"
                    android:textColor="@color/white"
                    android:textSize="20sp" android:id="@+id/registerBtn"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
