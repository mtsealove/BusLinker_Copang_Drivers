<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mtsealove.com.github.BuslinkerDrivers.RunInfoActivity">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/titleLayout"
                    android:background="@color/white">

        <ImageView android:layout_width="25dp" android:layout_height="25dp"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/btn_menu"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/title"
                      android:layout_centerInParent="true"
                      android:gravity="center"
                      android:orientation="horizontal">
            <ImageView android:layout_width="40dp" android:layout_height="40dp"
                       android:layout_margin="5dp"
                       android:layout_alignLeft="@id/titleTV"
                       android:src="@drawable/app_icon"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:id="@+id/titleTV"
                      android:text="BusLinker"
                      android:textSize="25sp"
                      android:textColor="@color/black"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:layout_below="@id/title"
              android:background="@color/hint"/>

    </RelativeLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="20dp"
              android:text="운행정보 상세"
              android:textColor="@color/black"
              android:clickable="false"
              android:layout_below="@id/titleLayout"
              android:textSize="25sp" android:id="@+id/detailTV"/>
    <!--본문-->
    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_marginHorizontal="20dp"
                                            android:layout_below="@id/detailTV"
                                            android:layout_above="@id/chargeLayout"
                                            android:layout_height="match_parent"
                                            android:id="@+id/contentView">
    </android.support.v7.widget.RecyclerView>

    <!--금액 및 기사 레이아웃-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_marginHorizontal="20dp"
                  android:orientation="vertical"
                  android:id="@+id/chargeLayout"
    >
        <!--금액-->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="금액"
                  android:textSize="24sp"
                  android:textColor="@color/black"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/costTV"
                  android:layout_marginTop="5dp"
                  android:text="95000원"
                  android:textSize="22sp"
                  android:textColor="@color/colorAccent"/>

        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="10dp"
                  android:id="@+id/setDriverTV"
                  android:padding="5dp"
                  android:background="@drawable/background_input"
                  android:text="기사 선택"
                  android:textSize="22sp"/>

        <Button
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:id="@+id/setDriverBtn"
                android:background="@drawable/btn_primary_default"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="기사님 등록"/>
    </LinearLayout>
</RelativeLayout>
