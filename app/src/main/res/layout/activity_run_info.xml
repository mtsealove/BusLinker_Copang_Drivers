<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mtsealove.com.github.BuslinkerDrivers.RunInfoActivity"
        android:background="@color/white">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/titleLayout"
                    android:background="@color/white">

        <ImageView android:layout_width="25dp" android:layout_height="25dp"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/btn_menu"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/title"
                      android:layout_centerInParent="true"
                      android:gravity="center"
                      android:orientation="horizontal">
            <ImageView android:layout_width="40dp" android:layout_height="40dp"
                       android:layout_margin="5dp"
                       android:layout_alignLeft="@id/titleTV"
                       android:src="@drawable/app_icon"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:id="@+id/titleTV"
                      android:text="BusLinker"
                      android:textSize="25sp"
                      android:textColor="@color/black"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:layout_below="@id/title"
              android:background="@color/hint"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/simpleLayout"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="60dp"
                    android:layout_below="@id/titleLayout"
                    android:layout_marginTop="8dp"
    >

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/simpleTV"
                  android:layout_marginVertical="10dp"
                  android:text="요약"
                  android:textSize="25sp"
                  android:textColor="@color/black"/>

        <!--지도 표시 레이아웃-->
        <net.daum.mf.map.api.MapView android:layout_width="match_parent" android:layout_height="match_parent"
                                     android:layout_below="@id/simpleTV"
                                     android:id="@+id/MapLayout">
        </net.daum.mf.map.api.MapView>
    </RelativeLayout>

    <!--상세 레이아웃-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:paddingTop="10dp"
                  android:clickable="true"
                  android:layout_marginHorizontal="20dp"
                  android:layout_marginTop="-55dp"
                  android:layout_below="@id/simpleLayout"
                  android:orientation="vertical"
                  android:id="@+id/DetailLayout"
                  android:background="@color/white"
                  app:layout_constraintTop_toBottomOf="@+id/titleLayout" tools:layout_editor_absoluteX="0dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="운행정보 상세"
                  android:textColor="@color/black"
                  android:clickable="false"
                  android:textSize="25sp" android:id="@+id/detailTV"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/scrollView"
                    android:scrollbars="none"
        >

            <!--본문-->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" tools:layout_editor_absoluteY="271dp"
                          tools:layout_editor_absoluteX="8dp">

                <!--출발지-->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:clickable="true"
                              android:orientation="vertical" android:id="@+id/startLayout">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/carYear"
                                  android:layout_marginTop="10dp"
                                  android:text="출발지"
                                  android:textSize="24sp"
                                  android:textColor="@color/black"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:layout_marginLeft="10dp"
                                  android:layout_toRightOf="@id/carYear"
                                  android:layout_alignParentBottom="true"
                                  android:text="5/29 19:00 출발"
                                  android:textColor="@color/hint" android:id="@+id/startTimeTV"/>
                    </RelativeLayout>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:text="서울시 광진구 아차산로 55길 43"
                              android:textSize="16sp"
                              android:textColor="@color/black" android:id="@+id/startAddrTV"/>
                </LinearLayout>

                <!--도착지-->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:clickable="true"
                              android:orientation="vertical" android:id="@+id/endLayout">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/carType"
                                  android:layout_marginTop="10dp"
                                  android:text="도착지"
                                  android:textSize="24sp"
                                  android:textColor="@color/black"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:layout_marginLeft="10dp"
                                  android:layout_toRightOf="@id/carType"
                                  android:layout_alignParentBottom="true"
                                  android:text="5/30 08:00 도착 예정"
                                  android:textColor="@color/hint" android:id="@+id/endTimeTV"/>
                    </RelativeLayout>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:text="서울시 광진구 아차산로 55길 43"
                              android:textSize="16sp"
                              android:textColor="@color/black" android:id="@+id/endAddrTV"/>
                </LinearLayout>

                <!--경유지-->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:text="경유지"
                          android:textSize="24sp"
                          android:textColor="@color/black"/>

                <!--경유지 목록-->
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/wayloadLayout"
                              android:orientation="vertical">

                </LinearLayout>


                <!--금액-->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:text="금액"
                          android:textSize="24sp"
                          android:textColor="@color/black"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/costTV"
                          android:layout_marginTop="5dp"
                          android:text="95000원"
                          android:textSize="22sp"
                          android:textColor="@color/colorAccent"/>

                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_marginTop="10dp"
                          android:id="@+id/setDriverTV"
                          android:padding="5dp"
                          android:background="@drawable/background_input"
                          android:text="기사 선택"
                          android:textSize="22sp"/>

                <Button
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/setDriverBtn"
                        android:background="@drawable/btn_primary_default"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text="등록"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
