<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="mtsealove.com.github.BuslinkerDrivers.MainActivity"
                android:background="@color/common_background">

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:id="@+id/titleLayout"
                            android:background="@color/white">

                <ImageView android:layout_width="25dp" android:layout_height="25dp"
                           android:id="@+id/backBtn"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="10dp"
                           android:src="@drawable/btn_menu"/>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/title"
                              android:layout_centerInParent="true"
                              android:gravity="center"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:layout_margin="5dp"
                               android:layout_alignLeft="@id/titleTV"
                               android:src="@drawable/app_icon"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="5dp"
                              android:id="@+id/titleTV"
                              android:text="BusLinker"
                              android:textSize="25sp"
                              android:textColor="@color/black"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                      android:layout_below="@id/title"
                      android:background="@color/hint"/>

            </RelativeLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/DriveInfoTV"
                      app:layout_constraintTop_toBottomOf="@id/titleLayout"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:layout_marginVertical="20dp"
                      android:layout_marginLeft="20dp"
                      android:textStyle="normal"
                      android:textColor="@color/black"
                      android:text="운행기록"
                      android:textSize="25sp"/>

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/searchET"
                      app:layout_constraintTop_toBottomOf="@id/DriveInfoTV"
                      android:inputType="text"
                      android:hint="조건을 검색하세요"
                      android:textSize="18sp"
                      android:paddingLeft="10dp"
                      android:paddingVertical="7dp"
                      android:layout_marginHorizontal="20dp"
                      android:layout_marginTop="10dp"
                      android:imeOptions="actionSearch"
                      android:background="@drawable/background_search"/>
            <ImageView android:layout_width="20dp" android:layout_height="20dp"
                       android:layout_marginRight="10dp"
                       android:layout_marginBottom="7dp"
                       android:src="@drawable/btn_search"
                       app:layout_constraintRight_toRightOf="@id/searchET"
                       app:layout_constraintBottom_toBottomOf="@id/searchET"/>


            <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginHorizontal="20dp"
                                                    app:layout_constraintTop_toBottomOf="@id/searchET"
                                                    android:layout_height="456dp"
                                                    android:id="@+id/recycleView" tools:layout_editor_absoluteX="20dp">
            </android.support.v7.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <mtsealove.com.github.BuslinkerDrivers.Design.AccountView android:layout_width="300dp"
                                                              android:id="@+id/accountView"
                                                              android:layout_gravity="start"
                                                              android:layout_height="match_parent">
    </mtsealove.com.github.BuslinkerDrivers.Design.AccountView>
</android.support.v4.widget.DrawerLayout>
